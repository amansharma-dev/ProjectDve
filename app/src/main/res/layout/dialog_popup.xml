<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogPopup_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCard"
    app:cardCornerRadius="60dp"
    app:cardMaxElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        

        <EditText
            android:id="@+id/bookNameDialog_editText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="start|bottom"
            android:hint="@string/book_name"
            android:textColor="@color/colorText"
            android:textSize="19sp"
            android:inputType="text"
            android:singleLine="true"
            android:autofillHints="no"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/authorNameDialog_editText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="start|bottom"
            android:hint="@string/author_name"
            android:textColor="@color/colorText"
            android:textSize="19sp"
            android:inputType="text"
            android:singleLine="true"
            android:autofillHints="no"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/priceDialog_editText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="start|bottom"
            android:hint="@string/price"
            android:textColor="@color/colorText"
            android:textSize="19sp"
            android:inputType="number"
            android:singleLine="true"
            android:autofillHints="no"/>

        <Button
            android:id="@+id/saveBtnDialog_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorButtonBgPositive"
            android:textColor="@color/colorButtonText"
            android:textSize="19sp"
            android:text="@string/save"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>